<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Planner.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:Planner.Views"
    Title="Planner">

    <ShellContent
        Title="Calendar"
        ContentTemplate="{DataTemplate views:CalendarPage}"
        Route="CalendarPage" />
    <ShellContent
        Title="Routines"
        ContentTemplate="{DataTemplate views:RoutineListPage}"
        Route="RoutineListPage" />
    <ShellContent
        Title="Routine Templates"
        ContentTemplate="{DataTemplate views:RoutineTemplatePage}"
        Route="RoutineTemplatePage" />
    <ShellContent
        Title="Goals"
        ContentTemplate="{DataTemplate views:GoalListPage}"
        Route="GoalListPage" />
    <ShellContent
        Title="Stats"
        ContentTemplate="{DataTemplate views:StatsPage}"
        Route="StatsPage" />
</Shell>
