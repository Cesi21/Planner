<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Planner.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Planner"
    xmlns:views="clr-namespace:Planner.Views"
    Title="Planner">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent
        Title="Routines"
        ContentTemplate="{DataTemplate views:RoutineListPage}"
        Route="RoutineListPage" />
    <ShellContent
        Title="Goals"
        ContentTemplate="{DataTemplate views:GoalListPage}"
        Route="GoalListPage" />
</Shell>
